{{pagination}}
{{#foreach posts}}
<article class="post col-md-10 col-sm-12 col-xs-12 col-md-offset-1 col-sm-offset-0 col-xs-offset-0">
    <div class="post-inner">
        <figure class="post-thumb">
            <a href="{{url}}"><img class="img-responsive" src="{{image}}" alt=""></a>
        </figure>
        <div class="content">
            <h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>
            <div class="meta">
                <ul class="meta-list list-inline">
                    <li class="post-time">{{date format="DD MMM YYYY"}}</li>
                    <li class="post-author"> por {{author}}</li>
                    <li class="post-comments-link">
                        {{tags prefix="Tags: "}}
                    </li>
                </ul>
            </div>
            <div class="post-entry">
                <p>{{excerpt characters="350"}}</p>
                <a class="read-more" href="{{url}}">Ler mais <i class="fa fa-long-arrow-right"></i></a>
            </div>
        </div>
    </div>
</article>
{{/foreach}}
{{pagination}}