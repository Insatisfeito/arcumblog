{{!< default}}
{{#post}}
<div class="blog-entry-wrapper">
    <div class="blog-entry">
        <article class="post post-style">
            <header class="blog-entry-heading" style="background: #253340 url({{image}}) no-repeat 50% center;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;">
                <div class="container text-center">
                    <h2 class="title">{{title}}</h2>
                    <div class="meta">
                        <ul class="meta-list list-inline">
                            <li class="post-time">{{date format="DD MMMM YYYY"}}</li>
                            <li class="post-author"> por <a href="blog-single.html#">{{author}}</a></li>
                        </ul>
                    </div>
                </div>
                <nav class="post-nav post-nav-top">
                    <span class="nav-previous"><a href="/blog/" rel="prev"><i class="fa fa-long-arrow-left"></i>Voltar ao blog</a></span>
                </nav>
            </header>
            <div class="container">
                <div class="row">
                    <div class="blog-entry-content col-md-8 col-sm-10 col-xs-12 col-md-offset-2 col-sm-offset-1 col-xs-offset-0">
                        {{content}}
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>
<aside class="read-next">
    {{#next_post}}
    <a class="read-next-story {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
        </section>
    </a>
    {{/next_post}} {{#prev_post}}
    <a class="read-next-story prev {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
        </section>
    </a>
    {{/prev_post}}
</aside>
{{/post}}